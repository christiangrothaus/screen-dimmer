{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "*.ts"],
}

